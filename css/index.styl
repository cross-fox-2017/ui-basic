$lime = hsla(80, 100%, 70%, .5)
$teal = #669999
$border-style = {
  border 1px solid green
  border-radius 10px
}


* {
  box-sizing border-box
}

body {
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
}

ul {
  list-style-type none
  margin 0
  padding 0
  overflow hidden
  background-color #333
  display flex
  justify-content left
  li {
    float left
    a {
      text-decoration none
      display block
      padding 25px
      color white
      text-align center
      &:hover {
        background-color $teal
        text-decoration none
        color #ffffcc
      }
    }
  }

}

h1, h2, h3, h4, h5, h6 {
  font-family 'Pacifico', cursive
  padding 10px 0
  margin 0 20px
  line-height 50px
}

p {
  padding 5px 0
  margin 0 20px
}

.myjumbotron {
  padding-top 25px
  padding-bottom 35px
  color inherit
  background-color $lime
  margin-top 15px
  margin-bottom 40px
  h1 {
    text-align center
  }
}

#jumbo-p {
  padding-top 10px
  font-size 18px
  font-weight 200
  &-h1 {
    font-size 55px
  }
}

.call-to-action {
  display flex
  justify-content center
  a {
    font-size 1.2em
    padding 10px 15px
    color green
    background-color darken($lime, 50%)
  }
}

.panel-container {
  display flex
  justify-content space-between
  &-form {
    display flex
    justify-content center
  }
}

.mypanel {
  padding 30px
  background-color white
  $border-style
  max-width 300px
  text-align center
  display flex
  flex-wrap wrap
  justify-content center
  align-items center
  &-form {
    $border-style
    padding 30px
    margin-top 40px
    margin-bottom 40px
    width 50%
  }
  img {
    width 200px
    height 200px
  }
  span {
    padding 10px
  }
}

#label-subs {
  margin-top 0px
  font-size 35px
}

.form-group {
  input {
    border 1px solid green
    border-radius 4px
    width 100%
    &[type=text] {
      padding 5px
    }
  }
  textarea {
    border 1px solid green
    border-radius 4px
    width 100%
    padding 5px
  }
}
